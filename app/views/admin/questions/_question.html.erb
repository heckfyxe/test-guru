<tr>
  <td>
    <% if without_link ||= false %>
      <%= question.text %>
    <% else %>
      <%= link_to question.text, admin_question_path(question) %>
    <% end %>
  </td>
  <td><%= link_to t(:edit), edit_admin_question_path(question) %></td>
  <td><%= link_to t(:delete), admin_question_path(question), method: :delete, data: { confirm: t(:are_you_sure) } %></td>
</tr>